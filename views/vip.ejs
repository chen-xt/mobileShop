	$(document).ready(function(){
		// 修改个人资料显示输入框及内容，隐藏原本显示的内容
		$("#update").click(function(){
			$(".info span").hide();
			$(".info input").show();
			$(".but #update").hide();
			$(".but #save").show();
		});
		$("#save").click(function(){
			$(".info span").show();
			$(".info input").hide();
			$(".but #update").show();
			$(".but #save").hide();
		});

	});

	$(document).click(function() { 
  	// 隐藏alert提示消息
	$(".alert").hide(); 
  });  
</script> 

