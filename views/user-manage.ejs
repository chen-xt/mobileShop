
<% include header.ejs %>
<% include top.ejs %>
<link rel='stylesheet' href='/stylesheets/manage.css' />

<div class="content">
	<div class="container" style="margin-top:30px;">
	  <% include alert.ejs %>
	  <h3>用户列表</h3>
	  <hr>
<!-- 	  <div class="add">
	<a href="/addUser" type="button" class="btn btn-primary" >添加新用户</a>
</div> -->
	  <div class="table-responsive">
		  <table class="table table-bordered table-hover">
	        <thead>
	            <tr>
	                <!-- <th>商品ID</th> -->
	                <th>用户名</th>
	                <!-- <th>密码</th> -->
	                <th>性别</th>
	                <th>QQ</th>
	                <th>用户邮箱</th>
	                <th>居住地址</th>
	                <th>联系电话</th>
	                <th>操作</th> 
	            </tr>
	        </thead>
	        <tbody>     
	        	 <% user1.forEach(function( user1 ){ %>
	                <tr>
	                    <td>
	                        <%= user1.username %>
	                    </td>
	                   <!--  <td>
	                       <%= user.password %>
	                   </td> -->
	                    <td>
	                        <%= user1.sex %>
	                    </td>
	                    <td>
	                        <%= user1.QQ %>
	                    </td>
	                    <td>
	                        <%= user1.email %>
	                    </td>
	                    <td>
	                        <%= user1.address %>
	                    </td>
	                    <td>
	                        <%= user1.tel %>
	                    </td>
	   
	                    <td>
	                      <a href="/delUser?id=<%= user1._id %>">删除</a> 
	                      <% if(status == 2) { %>
	                     | <a href="/updateStatus?id=<%= user1._id %>">设为管理员</a>
	                     <% }  %> 
	                    </td>
	                </tr>
				<% }); %>
	        </tbody>
		  </table>
	  </div>
	</div>
	<!-- 分页 -->
	<div class="page">
		<a href="/user-manage?page=1">首页</a>
		<a href="/user-manage?page=<%= page-1 %>">上一页</a>
		<a href="#">总共有<%= pages %>页，当前为第<%= page %>页</a>
		<a href="/user-manage?page=<%= page+1 %>">下一页</a>
		<a href="/user-manage?page=<%= pages %>">尾页</a>
	</div>
</div>

