<link rel='stylesheet' href='/stylesheets/manage.css' />
<% include header.ejs %>

<div class="content">
	<div class="container" style="margin-top:30px;">
		<div class="row add">
			<h3>添加新用户</h3>
		    <a href="/addUser" type="button" class="btn btn-primary">添加</a>
		</div>
		<div class="table-responsive">
			<h3>用户列表</h3>
		    <table class="table table-bordered table-hover">
		        <thead>
		            <tr>
		                <!-- <th>商品ID</th> -->
		                <th>用户名</th>
		                <th>密码</th>
		                <th>QQ</th>
		                <th>用户邮箱</th>
		                <th>居住地址</th>
		                <th>联系电话</th>
		                <th>操作</th> 
		            </tr>
		        </thead>
		        <tbody>     
		        	 <% user.forEach(function( user ){ %>
		                <tr>
		                    <td>
		                        <%= user.username %>
		                    </td>
		                    <td>
		                        <%= user.password %>
		                    </td>
		                    <td>
		                        <%= user.QQ %>
		                    </td>
		                    <td>
		                        <%= user.email %>
		                    </td>
		                    <td>
		                        <%= user.address %>
		                    </td>
		                    <td>
		                        <%= user.tel %>
		                    </td>
		             
		                    <td>
		                      <a href="/delUser?id=<%= user._id %>">删除</a> | <a href="/updateUser?id=<%= user._id %>">修改</a>
		                    </td>
		                </tr>
					<% }); %>
		        </tbody>
		    </table>
		</div>
	</div>
</div>